package SwingComponents;

import javax.swing.*;

public class MenuBar {
	private JMenuBar menubar;
    private JMenu features;
    private JMenu about;

    public MenuBar() {
        menubar = new JMenuBar();
        features = new JMenu("Menu");
        about = new JMenu("About");

        JMenuItem view = new JMenuItem("Xem danh sách ngôn ngữ lập trình");
        JMenuItem add = new JMenuItem("Thêm ngôn ngữ lập trình");
        JMenuItem delete = new JMenuItem("Xóa ngôn ngữ lập trình");
        JMenuItem search = new JMenuItem("Tìm kiếm ngôn ngữ lập trình");

        features.add(view);
        features.add(add);
        features.add(delete);
        features.add(search);

        menubar.add(features);
        menubar.add(about);
    }

    public JMenuBar getMenuBar() {
        return menubar;
    }
}
